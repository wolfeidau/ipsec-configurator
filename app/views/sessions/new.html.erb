<section>

  <div class="page-header">
    <h1>Log In</h1>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="span6 offset1">
        <%= form_tag sessions_path, :class => "form-horizontal" do %>

          <div class="control-group">
            <%= label_tag :email, nil, :class => "control-label" %>
            <div class="controls">
              <%= text_field_tag :email, nil, :class => "input-large" %>
            </div>
          </div>

          <div class="control-group">
            <%= label_tag :password, nil, :class => "control-label" %>
            <div class="controls">
              <%= password_field_tag :password, nil, :class => "input-large" %>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <label class="checkbox">
                <input type="checkbox"> Remember me
              </label>
            </div>
          </div>

          <div class="form-actions">
            <%= button_tag "Log In", :class => "btn btn-primary" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>

</section>
