<% if flash[:notice] %>
  <div class="alert alert-info">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:success] %>
  <div class="alert alert-success">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:success] %>
  </div>
<% end %>

<% if flash[:info] %>
  <div class="alert alert-block">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:info] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:error] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:alert] %>
  </div>
<% end %>
